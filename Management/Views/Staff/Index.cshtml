@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model IEnumerable<Management.Dto.AccountDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Account List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Forename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @{
                    var fullName = item.Forename + " " + item.Surname;
                    Html.DisplayFor(modelItem => fullName);
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @{
                    Html.DisplayName(item.Roles.Any(r => r.Equals("Staff", StringComparison.CurrentCultureIgnoreCase)) ? "Staff" : "Non-Staff");
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Set Roles</a>
            </td>
        </tr>
}
    </tbody>
</table>
